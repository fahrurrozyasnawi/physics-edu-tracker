{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".", // root of your "paths" below. Required if "paths" is defined
    "paths": {
      "@context/*": [
        "src/context/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@screens/*": [
        "src/screens/*"
      ],
      "@routes": [
        "src/routes"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@theme/*": [
        "src/theme/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
    }
  },
  "include": [
    "src/**/*",
    "./App.tsx"
  ]
}